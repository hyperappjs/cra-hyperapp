  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start example",
      "program": "${workspaceFolder}/bin/index.js",
      "cwd": "${workspaceFolder}/example",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build example",
      "program": "${workspaceFolder}/bin/index.js",
      "args": ["build", "--stats"],
      "cwd": "${workspaceFolder}/example",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test example",
      "program": "${workspaceFolder}/bin/index.js",
      "args": ["test"],
      "cwd": "${workspaceFolder}/example",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
